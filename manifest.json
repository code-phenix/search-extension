{
    "manifest_version": 2,
    "name": "Minimalist New Tab",
    "short_name": "Minimalist New Tab",
    "description": "Overriding default chrome tab with minimalist new tab",
    "version": "1.0.0",
    "icons": {
        "128": "icon.png"
    },
    "author": "Vishnuvardhan S",
    "homepage_url": "https://github.com/coderrag/search-extension",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "src/popup.html"
    },
    "chrome_url_overrides": {
        "newtab": "src/newtab.html"
    },
    "permissions": [
        "storage",
        "activeTab"
    ]
}